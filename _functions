# Open man page in Google Chrome
manchrome() {
  man "$1" | col -b > "/tmp/$1"
  open -a 'Google Chrome' "/tmp/$1"
}

# Open man page in VSCode
mancode() {
  man "$1" | col -b > "/tmp/$1"
  code /private/tmp/$1
}

manfox() {
  man "$1" | col -b > "/tmp/$1"
  open -a Firefox "/tmp/$1"
}

# Open man page in Preview
manpreview() {
  man -t "$@" | open -fa Preview
}

# Create a new directory and enter it
mkd() {
  mkdir -p "$@" && cd "$_"
}

# Easy custom Mac notifications from iTerm2 and VSCode
notify() {
  if [[ $TERM_PROGRAM == 'iTerm.app' ]]; then
    terminal-notifier -group "ITERM" -title $1 -message $2 -sender "com.googlecode.iterm2"
  else
    terminal-notifier -group "VSCODE" -title $1 -message $2 -sender "com.microsoft.VSCode"
  fi
}

# Pretty-print PATH variable
path() {
  case $1 in
  -u) # unique
    echo ${PATH//:/\\n} | awk '!seen[$0]++'
    ;;
  *)
    echo ${PATH//:/\\n}
    ;;
  esac
}

port() {
  case $1 in
  free | clear | remove | clr | rm)
    case $2 in
    --force | -f)
      kill -kill $(lsof -t -i :$3)
      ;;
    esac
    kill $(lsof -t -i :$2)
    ;;
  --force | -f)
    kill -kill $(lsof -t -i :$3)
    ;;
  *)
    lsof -i :$1
    ;;
  esac
}

prompt() {
  printf "$1 [${green}y$reset/${red}N$reset]: "
  if read -q; then
    $2
  else
    echo " $redb$black Aborting $reset $bold$funcstack[1]$reset..."
  fi
}

# Reload scripts &/or shell
r() {
  case $1 in
  -zsh | -z | --full)
    # https://github.com/robbyrussell/oh-my-zsh/blob/master/plugins/zsh_reload/zsh_reload.plugin.zsh
    local cache="$ZSH_CACHE_DIR"
    autoload -U compinit zrecompile
    compinit -i -d "$cache/zcomp-$HOST"

    for f in ~/.zshrc "$cache/zcomp-$HOST"; do
      zrecompile -p $f && command rm -f $f.zwc.old
    done

    # Use $SHELL if available; remove leading dash if login shell
    [[ -n "$SHELL" ]] && exec ${SHELL#-} || exec zsh
    ;;
  *)
    . $DOT/_aliases
    . $DOT/_functions
    tput cl
    ;;
  esac
}

# Fully reinstall node_modules to fix NPM errors
reinstall() {
  printf "Are you sure you want to ${bold}reinstall$reset $yellow/node_modules$reset? [${green}y$reset/${red}n$reset]: "
  if read -q; then
    printf "\nRunning ${bold}trash package-lock.json$reset...\n" && trash package-lock.json
    printf "Running ${bold}rm -r node_modules$reset...\n" && rm -r node_modules
    printf "Running ${bold}npm install$reset...\n" && npm install
  else
    echo " $redb$black Aborting $reset $bold$funcstack[1]$reset..."
  fi
}

rmverify() {
  xattr -d com.apple.quarantine /Applications/$1.app
}

# Check active shell on Mac
shell() {
  {
    printf "${bold}SHELLS$reset " && sed -n 5p /etc/shells
    echo ${bold}\$SHELL$reset $SHELL
  } | column -t
  dscl . -read /Users/$USER UserShell
  echo ${bold}ps -p \"\$\$\"$reset
  ps -p "$$"
}

# Keyboard shortcuts I want to memorize
shortcuts() {
  finder
  iterm
}

themes() {
  local themes=(
    amomum.theme-verdigris-light
    bimbo1989.code-with-a-tan
    ChirtleLovesDolls.nebula-theme
    evturn.cosmic-barf
    felipe-mendes.slack-theme
    j0hnm4r5.laser-theme
    jaredkent.laserwave
    jeremycantu.hack3r-theme
    liviuschera.noctis
    max-SS.cyberpunk
    PKief.material-icon-theme
    samrapdev.outrun
    theapemachine.scarface-theme
    zeebo.hacker-colors
  )
  local builtinthemes=(
    vscode.theme-defaults
    vscode.theme-kimbie-dark
    vscode.theme-monokai-dimmed
    vscode.theme-monokai
    vscode.theme-quiet-light
    vscode.theme-red
    vscode.solarized-dark
    vscode.solarized-light
    vscode.tomorrow-night-blue
  )
  case $1 in
  install)
    prompt 'Install extra themes?' 'code --install-extension $themes[@]'
    ;;
  uninstall | rm)
    prompt 'Uninstall extra themes?' 'code --uninstall-extension $themes[@]'
    ;;
  disable)
    prompt 'Disable builtin themes?' 'code --disable-extension $builtinthemes[@]'
    ;;
  esac
}

trash() {
  osascript -e "tell application \"Finder\" to delete POSIX file \"$PWD/$1\""
}

# Update all system tools
update() {
  # printf "${bold}rustup update $reset" && rustup update
  printf "$greenb$black START $reset$green update$reset!\n"
  printf "ï„“$bold  git pull$reset$blue powerlevel10k.zsh-theme$reset... " && git -C $ZSH/custom/themes/powerlevel10k pull
  printf "ï„“$bold  git pull$reset$blue fast-syntax-highlighting$reset... " && git -C $ZSH/custom/plugins/fast-syntax-highlighting pull
  printf "ï„“$bold  git pull$reset$blue zsh-autosuggestions$reset... " && git -C $ZSH/custom/plugins/zsh-autosuggestions pull
  printf "ï„ $bold  upgrade_oh_my_zsh$reset... " && upgrade_oh_my_zsh | head -2
  printf "ï„ $bold  tldr --update$reset\n" && tldr --update
  printf "$boldðŸº  brew update$reset... " && brew update
  printf "$boldðŸº  brew cask upgrade $reset" && brew cask upgrade
  # printf "$redîœž $bold npm update --global$reset\n" && npm update --global
  # printf "$redîœ¹ $bold gem update colorls$reset\n" && gem update colorls
  # printf "ïŒ‚$bold  mas upgrade $reset" && mas upgrade
  printf "ïŒ‚ $bold softwareupdate --install --all$reset\n" && softwareupdate --install --all
  printf "$redïž¡$reset  Updating $bold.gitignore$reset...\n" && cat $DOT/_gitignore > $DOT/.gitignore && curl https://www.gitignore.io/api/git,node,sass,rust,vuejs,macos,windows,visualstudiocode >> $DOT/.gitignore
  printf "$redïž¡$reset  Updating$bold tor-user.js$reset...\n" && cat $DOT/tor-user.js > ~/Library/Application\ Support/TorBrowser-Data/Browser/ew57mn4o.default/user.js
  printf "$redï‰©$reset  Syncing pyllyukko$bold user.js$reset...\n" && curl https://raw.githubusercontent.com/pyllyukko/user.js/master/user.js > ~/Library/Application\ Support/Firefox/Profiles/cb2bsclc.pyllyukko/user.js
  printf "$redï‰©$reset  Syncing ghacks$bold user.js$reset...\n" && curl https://raw.githubusercontent.com/ghacksuserjs/ghacks-user.js/master/user.js > ~/Library/Application\ Support/Firefox/Profiles/i9ky32oq.ghacks/user.js
  printf "$brownðŸ“¦$reset  Updating$bold _packages$reset...\n" && v -l > $DOT/_packages
  notify "update" "Done!"
  printf "$redb$black END $reset$bold$green update$reset!\n"
}

# List versions of all system tools
v() {
  case $1 in
  -v)
    # verbose
    printf "ïŒ‚ $bold macOS$reset $(sw_vers -productVersion)\n"
    printf "îž•  $bold iTerm$reset $(app -v iterm | head -c 5)\n"
    printf "ï’‰  $bold zsh$reset $ZSH_VERSION\n\n"
    printf "îž¨  $bold Rust$reset $(rustc --version | cut -d' ' -f2)\n"
    printf "$redîœž  ${bold}npm$reset $(npm -v)\n"
    npm ls -gs --depth=0 | tail -n +2 | cut -c 5-
    printf "ðŸº  ${bold}Homebrew$reset $(brew -v | xargs | head -c 14 | tail -c 5)$reset\n"
    brew ls --versions $(brew leaves)
    ;;
  -l)
    # long
    printf "ïŒ‚ $bold macOS$reset $(sw_vers -productVersion)\n"
    printf "îž•  $bold iTerm$reset $(app -v iterm | head -c 5)\n"
    printf "ï’‰  $bold zsh$reset $ZSH_VERSION\n"
    printf "îž¨  $bold Rust$reset $(rustc --version | cut -d' ' -f2)\n"
    echo
    printf "ïŒ‚  ${bold}mas$reset $(mas version)\n"
    mas list
    printf "\n$redîœž  ${bold}npm$reset $(npm -v)\n"
    npm ls -gs --depth=0 | tail -n +2 | cut -c 5-
    printf "$redîœ¹  ${bold}RubyGems$reset$(ruby -v | head -c 10 | tail -c 6)\n\n"
    ls ~/.gem/ruby/2.6.0/gems/
    printf "ðŸº  ${bold}Homebrew$reset $(brew -v | xargs | head -c 14 | tail -c 5)$reset\n"
    brew ls --versions $(brew leaves) && echo
    printf "ðŸ›¢ï¸  ${bold}Casks$reset\n"
    brew cask ls --versions && echo
    printf "$blueï¡±  ${bold}VSCode$reset $(code -v | head -1)\n"
    code --list-extensions --show-versions
    ;;
  *)
    printf "ïŒ‚ $bold macOS$reset $(sw_vers -productVersion)\n"
    printf "îž• $bold iTerm$reset $(app -v iterm | head -c 5)\n"
    printf "ï’‰ $bold zsh$reset $ZSH_VERSION\n\n"
    printf "îž¨ $bold Rust$reset $(rustc --version | cut -d' ' -f2)\n"
    printf "ðŸº$bold Homebrew$reset $(brew -v | xargs | head -c 14 | tail -c 5)\n"
    printf "$greenîœ™ $bold Node$reset $(node -v | tail -c 8)\n"
    printf "$redîœž $bold npm$reset $(npm -v)\n"
    printf "$blueï¡± $bold VSCode$reset $(code -v | head -1)\n"
    printf "$greenïµ‚ $bold Vue$reset $(vue --version)\n"
    ;;
  esac
}

vsicon() {
  case $1 in
  verbose | --verbose | v | -v)
    printf "Argument matched ${bold}v${reset}!\n"
    ;;
  *)
    printf "${bold}${red}Invalid${reset} argument!\n"
    ;;
  esac
}

# ESLint-warning-free webpack output for Vue CLI
wo() {
  printf '/* eslint-disable */\nconst webpack_output = ' > webpack_output.js
  vue inspect | tail -n +2 | sed "s/native code/'native code'/g" >> webpack_output.js
  code webpack_output.js
}
