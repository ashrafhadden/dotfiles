#!/usr/bin/env bash

export CODE="$HOME/CODE"           # Path to my code projects
export DOTS="$HOME/code/dotfiles"  # Path to my dotfiles
export EDITOR='code'               # Make VSCode the default editor
export HISTCONTROL='ignoreboth'    # Omit duplicates and commands that begin with a space from history
export LC_ALL='en_US.UTF-8'        # Use UTF-8
export LESS_TERMCAP_md="${yellow}" # Highlight section titles in manual pages
export ZSH="$HOME/.oh-my-zsh"      # Path to your oh-my-zsh installation.
export MANPAGER='less -X'          # Donâ€™t clear the screen after quitting a manual page.

## PATH
export PATH="/usr/local/sbin:$PATH" # Homebrew sbin
export PATH="/usr/local/bin:$PATH" # `which brew`
export PATH="/usr/local/opt/ruby/bin:$PATH" # `brew info ruby` caveat
export PATH="/usr/local/lib/ruby/gems/2.6.0/bin:$PATH" # `brew info ruby` caveat
export PATH="$DOTS/git-commands:$PATH" # enable Git subcommands file:///$HOME/code/dotfiles/git-home